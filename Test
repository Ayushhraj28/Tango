global key;
InitKeyboard();

% brick = ConnectBrick("TANGO");
brick.SetColorMode(2, 2); 

wallDist = 30; 
leftTurns = 0; 
start = true;  

while true
    pause(0.1); 
    switch key
        case 'a'  
            while start
                currentColor = brick.ColorCode(2);  
                dist = brick.UltrasonicDist(3);   

                disp(currentColor);
               
                if currentColor == 4 % Chnage This - Red
                    brick.StopMotor('AD');
                    pause(1);

                    brick.MoveMotor('AD', -50)
                    pause(0.5)
                    continue;  
                
            
                elseif currentColor == 6 % Chnage This - Blue
                    brick.StopMotor('AD');
                    beepTwice(brick);
                    break; 
                
              
                elseif currentColor == 3 % Change This - Green
                    brick.StopMotor('AD');
                    beepThreeTimes(brick);

                    brick.MoveMotor('AD', -50)
                    pause(0.5)
                    continue;  
                end
                
             
                if dist < wallDist
                    avoidObstacle(brick);  
                else
                    brick.MoveMotor('AD', -50);  
                end
            end

        case 'uparrow' 
            brick.MoveMotor('AD', -1000);
        case 'downarrow' 
            brick.MoveMotor('AD', 1000);
        case 'leftarrow' 
            brick.MoveMotor('A', 1000);
            brick.MoveMotor('D', -1000);
        case 'rightarrow' 
            brick.MoveMotor('D', 1000);
            brick.MoveMotor('A', -1000);
        case 'w' 
            brick.MoveMotor('C', -100);
        case 's' 
            brick.MoveMotor('C', 5);
        case 'p' 
            break;
        otherwise 
            brick.MoveMotor('AD', 0);
            brick.MoveMotor('BC', 0);
    end
end
CloseKeyboard();


function beepTwice(brick)
    for i = 1:2
        brick.playTone(100, 800, 500);
        pause(0.75);
    end
end


function beepThreeTimes(brick)
    for i = 1:3
        brick.playTone(100, 800, 500);
        pause(0.75);
    end
end


function avoidObstacle(brick)
    global leftTurns
    if leftTurns < 3
        turnLeft(brick);  
        leftTurns = leftTurns + 1;
    else
        turnRight(brick); 
        leftTurns = leftTurns - 1;
    end
end


function turnLeft(brick)
    brick.MoveMotor('A', 50);
    brick.MoveMotor('D', -50);
    pause(1);
    brick.MoveMotor('A', -50);
    brick.MoveMotor('D', -50);
    pause(0.5);
end


function turnRight(brick)
    % brick.MoveMotor('A', -50);
    % brick.MoveMotor('D', 50);
    % pause(1);
    brick.MoveMotor('A', -50);
    brick.MoveMotor('D', 50);
    pause(1);
    brick.MoveMotor('A', -50);
    brick.MoveMotor('D', -50);
    pause(0.5);
end
